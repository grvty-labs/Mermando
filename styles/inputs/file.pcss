.file-input {
  align-items: center;
  cursor: pointer;
  display: flex;
  min-height: 4em;

  > .placeholder {
    font-size: 0.875em;
    transition: color var(--input-transition-time) ease-in-out;
  }

  > .attachment {
    &.multiple {
      > a {
        margin-right: 0.5em;
      }
    }
  }

  &.accept,
  &.reject {
    > .placeholder {
      color: var(--file-reject-font-color);
    }
  }

  &.reject {
    background-color: var(--file-reject-background-color);
    border-color: var(--file-reject-border-color);

    ~ .icon {
      &:first-of-type {
        color: var(--file-reject-border-color);
      }
    }
  }

  &.free {
    &.read-only,
    &.blocked,
    &:--disabled {
      cursor: default;

      ~ .icon {
        &:first-of-type {
          color: var(--input-placeholder-font-color);
        }
      }
    }

    &.read-only,
    &.blocked {
      height: auto;
      min-height: 1.3125em;

      ~ .icon {
        &:first-of-type {
          color: var(--file-readonly-font-color);
          font-size: 1.3125em;
          height: 1em;
          width: 1em;
        }
      }
    }
  }
}

.file-sham {
  > :--icons-class {
    &:first-child {
      font-size: 1.75em;
      height: 1em;
      width: 1em;
    }
  }

  ~ .footer,
  > .file-input {
    > .attachment {
      width: 100%;

      &.single,
      &.multiple {
        display: flex;
        flex-wrap: wrap;

        > span {
          align-items: center;
          background-color: var(--file-values-background);
          border-radius: 5em;
          color: var(--file-values-font-color);
          display: inherit;
          font-size: var(--file-values-font-size);
          margin-right: 0.666em;
          padding: 0.333em 0.666em;
        }

        &.grid {
          align-items: stretch;
          display: grid;
          grid-gap: 1.375em;
          grid-template-columns: repeat(auto-fill, minmax(14.375em, auto));
          justify-content: flex-start;
        }

        > .img {
          align-items: center;
          background-color: var(--file-images-background);
          display: flex;
          max-height: 14.375em;
          overflow: hidden;
          position: relative;

          > img {
            max-width: 100%;
            min-width: 100%;
          }

          .tag {
            background-color: var(--file-values-background);
            border-radius: 0 0 6px;
            color: var(--file-values-font-color);
            font-size: 0.625em;
            left: 0;
            position: absolute;
            text-transform: uppercase;
            top: 0;

            &:not(:empty) {
              padding: 0.4em 0.8em;
            }
          }

          .remove-btn {
            background-color: var(--file-values-background);
            border-radius: 3em;
            color: var(--file-values-font-color);
            display: flex;
            height: 1em;
            position: absolute;
            right: 0.5em;
            text-align: center;
            top: 0.5em;
            visibility: visible;
            width: 1em;

            &::after {
              margin-left: 0;
              position: static;
            }

            &.disabled {
              display: none;
            }
          }

          .overlay {
            align-items: center;
            background-color: var(--file-overlay-background);
            color: var(--file-overlay-font-color);
            cursor: pointer;
            display: flex;
            font-size: 1.9em;
            height: 100%;
            justify-content: center;
            left: 0;
            opacity: 0;
            position: absolute;
            top: 0;
            transition:
              opacity var(--file-transition-time) ease-in-out,
              visibility 0s var(--file-transition-time) ease-in-out;
            width: 100%;

            > span {
              height: 1em;
              width: 1em;
            }

            &:hover {
              opacity: var(--file-overlay-opacity);
              transition: opacity var(--file-transition-time) ease-in-out;
            }
          }
        }
      }
    }
  }
}
