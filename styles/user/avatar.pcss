.avatar {
  align-items: center;
  background-color: var(--white);
  background-position: bottom;
  background-repeat: no-repeat;
  background-size: cover;
  border-radius: 1.5em;
  display: flex;
  height: 1.5em;
  justify-content: center;
  max-height: 1.5em;
  max-width: 1.5em;
  min-height: 1.5em;
  min-width: 1.5em;
  width: 1.5em;

  span {
    background: inherit;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    display: block;
    filter: invert(1) grayscale(1) contrast(20);
    font-size: 0.75em;
    line-height: unset;
    text-align: center;
    user-select: none;
  }
}
