.users-list {
  display: flex;
  flex-direction: column;

  > div {
    display: inherit;

    &.selected {
      background-color: var(--white-smoke);
    }

    > .avatar {
      font-size: 1.333em;
    }

    > .data {
      display: inherit;
      flex-direction: column;
      padding: 0 0.875em;

      > .name {
        color: var(--nero);
      }

      .email {
        color: var(--light-grey);
        font-size: 0.625em;
      }

      .spec {
        font-style: italic;
        font-size: 0.8em;
      }
    }

    > .actions {
      &:not(:empty) {
        margin-left: auto;
      }
    }

    &:not(:last-of-type) {
      margin-bottom: 0.875em;
    }
  }
}
