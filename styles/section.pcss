.section {
  > .header {
    align-items: center;
    display: flex;
    padding: 0 2.6875em;
    width: 100%;

    > .title {
      font-size: 1.5em;
      margin: 0 1.5em 0 0;
    }
  }

  > .middle {
    border-bottom: 1px solid var(--gainsboro);
    display: flex;
    margin-top: 2.0625em;
    padding: 0 2.6875em;

    > .tab {
      border-bottom: var(--section-tab-border-width) solid transparent;
      color: var(--section-tab-color);
      cursor: pointer;
      margin-right: 0.5625em;
      min-width: 5.06em;
      outline: none;
      padding: 0.4375em;
      text-align: center;
      text-transform: uppercase;
      transition: opacity 0.3s;

      &:not(:first-of-type) {
        margin-left: 0.5625em;
      }

      &:hover,
      &:--enter-action {
        border-bottom-color: var(--section-tab-hover-color);
        color: var(--section-tab-hover-color);
      }

      &.selected {
        border-bottom-color: var(--section-selected-tab-color);
        color: var(--section-selected-tab-color);
        font-weight: bold;
      }
    }
  }

  > .content {
    margin: 2em 2.6875em;

    > table {
      width: 100%;
    }

    &.cards-panel {
      align-items: stretch;
      display: grid;
      grid-gap: 1.875em;
      grid-template-columns: repeat(auto-fill, 260px);
      justify-content: flex-start;

      > .card {
        margin-bottom: 0;
      }
    }

    &.separated-rows {
      > div {
        border-bottom: 1px solid var(--whisper-3);
        padding-bottom: 1.5em;
        padding-top: 1.5em;

        &:empty,
        &:last-of-type {
          border-bottom: none;
          padding-bottom: 0;
        }
      }
    }

    &.split {
      display: flex;
      justify-content: space-between;

      > div {
        flex: 1;
      }
    }
  }
}
